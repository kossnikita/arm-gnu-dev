{
  "name": "ARM GNU Baremetal Dev",
  "image": "ghcr.io/kossnikita/arm-baremetal-devcontainer:latest",
  "remoteUser": "vscode",
  "privileged": true,
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "enableNonRootDocker": "true",
      "moby": true,
      "installDockerBuildx": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "marus25.cortex-debug",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "cmake.generator": "Ninja",
        "cmake.configureOnOpen": false,
        "files.associations": {
          "*.h": "c",
          "*.h.in": "c",
          "*.ld": "linkerscript",
          "*.ld.in": "linkerscript"
        }
      }
    }
  },
  "postCreateCommand": "arm-none-eabi-gcc --version && cmake --version && docker --version && docker buildx version"
}
